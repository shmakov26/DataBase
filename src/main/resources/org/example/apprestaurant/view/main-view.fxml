<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.RowConstraints?>

<VBox xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.apprestaurant.controller.MainController">
   <children>
      <Label text="Система управления рестораном" styleClass="title-label" />
      <GridPane hgap="10" vgap="10" styleClass="button-grid">
         <columnConstraints>
            <ColumnConstraints minWidth="200" prefWidth="200" />
            <ColumnConstraints minWidth="200" prefWidth="200" />
            <ColumnConstraints minWidth="200" prefWidth="200" />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints minHeight="60" prefHeight="60" />
            <RowConstraints minHeight="60" prefHeight="60" />
         </rowConstraints>
         <children>
            <Button text="Управление блюдами" onAction="#openDishManagement" GridPane.columnIndex="0" GridPane.rowIndex="0" styleClass="menu-button" />
            <Button text="Управление официантами" onAction="#openWaiterManagement" GridPane.columnIndex="1" GridPane.rowIndex="0" styleClass="menu-button" />
            <Button text="Управление сменами" onAction="#openShiftManagement" GridPane.columnIndex="2" GridPane.rowIndex="0" styleClass="menu-button" />
            <Button text="Управление столиками" onAction="#openTableManagement" GridPane.columnIndex="0" GridPane.rowIndex="1" styleClass="menu-button" />
            <Button text="Управление посетителями" onAction="#openVisitorManagement" GridPane.columnIndex="1" GridPane.rowIndex="1" styleClass="menu-button" />
            <Button text="Управление заказами" onAction="#openOrderManagement" GridPane.columnIndex="2" GridPane.rowIndex="1" styleClass="menu-button" />
         </children>
      </GridPane>
   </children>
   <padding>
      <Insets top="20" right="20" bottom="20" left="20" />
   </padding>
   <spacing>20</spacing>
</VBox>
